<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DayActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/meal1"
        android:layout_width="407dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/rectangle_with_border"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/meal1_item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="meal1_item1" />

        <TextView
            android:id="@+id/meal1_item2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="meal1_item2" />
        <ImageButton
            android:id="@+id/add_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/plus"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/meal2"
        android:layout_width="407dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/rectangle_with_border"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="@id/meal1"
        app:layout_constraintTop_toBottomOf="@id/meal1">

        <TextView
            android:id="@+id/meal2_item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="meal2_item1" />

        <TextView
            android:id="@+id/meal2_item2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="meal2_item2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/meal3"
        android:layout_width="407dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/rectangle_with_border"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="@id/meal2"
        app:layout_constraintTop_toBottomOf="@id/meal2">

        <TextView
            android:id="@+id/meal3_item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="meal3_item1" />

        <TextView
            android:id="@+id/meal3_item2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="meal3_item2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/meal4"
        android:layout_width="407dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/rectangle_with_border"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="@id/meal3"
        app:layout_constraintTop_toBottomOf="@id/meal3">

        <TextView
            android:id="@+id/meal4_item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="meal4_item1" />

        <TextView
            android:id="@+id/meal4_item2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="meal4_item2" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>